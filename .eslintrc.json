{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:jsx-a11y/recommended",
    "plugin:react/recommended",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "no-shadow": 0,
    "callback-return": 0,
    "func-names": 0,
    "prefer-destructuring": 0,
    "prefer-arrow-callback": 0,
    "prefer-spread": 0,
    "react/jsx-uses-react": 0,
    "react/jsx-props-no-spreading": 0,
    "react/jsx-filename-extension": 0,
    "react/react-in-jsx-scope": 0,
    "react/prop-types": 0,
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "double"],
    "semi": ["error", "always"],
    "no-console": 2,
    "eqeqeq": 2,
    "spaced-comment": 2,
    "require-await": 2,
    "prefer-template": 2,
    "prefer-const": 2,
    "no-var": 2,
    "object-shorthand": 2,
    "comma-dangle": 2,
    "jsx-quotes": 2,
    "no-useless-return": 2
  },
  "ignorePatterns": ["dist", "*.config.js", "node_modules"]
}
